@model IEnumerable<AWS_ElasticBeanstalk_Project.Models.Video>

@{
    ViewData["Title"] = "Videos";
    var userId = ViewData["userId"].ToString();
}


<h2>List of Videos</h2>

@if (!string.IsNullOrEmpty(userId))
{
    <h4>User: @userId</h4>
    <p>
        @*<a asp-action="Create">Create New</a>*@
        @Html.ActionLink("Create New", "Create", "Videos", new {userId = @userId }) |
    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OverallRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Commnt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OverallRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Commnt)
            </td>


            @if (!string.IsNullOrEmpty(userId) && userId != "0")
            {
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.VideoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VideoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VideoId">Delete</a> |*@
                    @Html.ActionLink("Edit", "Edit", "Videos", new { id = @item.VideoId, userId = @userId }) |
                    @Html.ActionLink("Details", "Details", "Videos", new { id = @item.VideoId, userId = @userId }) |
                    @*@Html.ActionLink("Delete", "Delete", "Videos", new { id = @item.VideoId, userId = @userId }) |*@
                    @*@Html.ActionLink("ViewComments", "Index", "Comments", new { videoId = @item.VideoId, userId = @userId })*@
                </td>
            }
        </tr>
        }
    </tbody>


    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/laxmibomb.jpg" alt="ASP.NET" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Laxmii- Official Trailer
                        <a class="btn btn-default" href="https://www.youtube.com/watch?v=xw0gE8QA1W0" style="color:hotpink">
                            >
                            Click Me
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/avengersInfinityWar.jpg" alt="Avengers Infinity wars" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Marvel Studios' Avengers: Infinity War - Official Trailer
                        <a class="btn btn-default" href="https://www.youtube.com/watch?v=QwievZ1Tx-8" style="color:hotpink">
                            Click Me
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/Avengers_ Endgame.jpg" alt="Avengers EndGame" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Marvel Studios' Avengers: Endgame - Official Trailer
                        <a class="btn btn-default" href="https://www.youtube.com/watch?v=TcMBFSGVi1c" style="color:hotpink">
                            Click Me
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <table>
        <tr>
            <td>
                @if (string.IsNullOrEmpty(userId))
                {
                    <div>
                        <span>&nbsp;</span>
                    </div>
                    <p>
                        <b> @Html.ActionLink("Go_Back_To_LogIn", "Login", "Login")</b>
                    </p>
                }
            </td>
        </tr>
    </table>
</table>
