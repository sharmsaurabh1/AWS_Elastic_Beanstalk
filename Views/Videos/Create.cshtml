@model AWS_ElasticBeanstalk_Project.Models.Video

@{
    ViewData["Title"] = "Create";
    var userId = ViewData["userId"].ToString();
}

<h2>Create Video</h2>

@if (!string.IsNullOrEmpty(userId))
{
    <h4>User: @userId</h4>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-id="@userId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Type</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OverallRating" class="control-label">Rating</label>
                <input asp-for="OverallRating" class="form-control" />
                <span asp-validation-for="OverallRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Commnt" class="control-label"></label>
                <input asp-for="Commnt" class="form-control" />
                <span asp-validation-for="Commnt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoFile" class="control-label"></label>
                <input asp-for="VideoFile" class="form-control" type="file" />
                <span asp-validation-for="VideoFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </form>
        <input id="hdnUserId" type="hidden" value="@userId" />
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index", "Videos", new { userId = @userId })
    @*<a asp-action="Index" asp-route-id="@userId">Back to List</a>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
